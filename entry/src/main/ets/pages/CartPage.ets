import { CartStore } from '../common/CartStore';
import { LAYOUT_WIDTH_OR_HEIGHT } from '../common/CommonConstants';
import { CartItem } from '../common/CartStore';

@Entry
@Component
export struct CartPage {
  @StorageLink('cartItems') cartItems: CartItem[] = [];

  // Ëé∑ÂèñÈÄâ‰∏≠ÂïÜÂìÅÊÄª‰ª∑
  private getTotalPrice(): number {
    return this.cartItems
      .filter(item => item.selected)
      .reduce((total, item) => total + (item.price * item.count), 0);
  }

  // Ëé∑ÂèñÈÄâ‰∏≠ÂïÜÂìÅÊï∞Èáè
  private getSelectedCount(): number {
    return this.cartItems
      .filter(item => item.selected)
      .reduce((total, item) => total + item.count, 0);
  }

  build() {
    Column({ space: 0 }) {
      // Ê†áÈ¢ò
      Text('Ë¥≠Áâ©ËΩ¶')
        .fontSize(20)
        .fontWeight(FontWeight.Bold)
        .width('100%')
        .textAlign(TextAlign.Center)
        .padding(16)
        .backgroundColor('#FFFFFF')

      // Ë¥≠Áâ©ËΩ¶ÂÜÖÂÆπ
      if (this.cartItems.length === 0) {
        // Á©∫Ë¥≠Áâ©ËΩ¶
        Column() {
          Text('üõí')  // ‰ΩøÁî®EmojiÔºå‰∏çÈúÄË¶ÅÂõæÁâá
            .fontSize(60)
            .margin({ bottom: 16 })

          Text('Ë¥≠Áâ©ËΩ¶ÊòØÁ©∫ÁöÑ')
            .fontSize(18)
            .fontColor('#999999')
        }
        .height('100%')
        .justifyContent(FlexAlign.Center)
        .alignItems(HorizontalAlign.Center)
      } else {
        // Ë¥≠Áâ©ËΩ¶ÊúâÂïÜÂìÅ
        Column() {
          // ÂÖ®ÈÄâË°å
          Row({ space: 8 }) {
            Checkbox({ name: 'selectAll', group: 'cart' })
              .select(this.cartItems.every(item => item.selected))
              .onChange((checked: boolean) => {
                CartStore.toggleSelectAll();
              })

            Text('ÂÖ®ÈÄâ')
              .fontSize(16)
          }
          .padding(16)
          .width('100%')
          .alignItems(VerticalAlign.Center)

          // ÂïÜÂìÅÂàóË°®
          List({ space: 8 }) {
            ForEach(this.cartItems, (item: CartItem) => {
              ListItem() {
                this.CartItemCard(item)
              }
            }, (item: CartItem) => item.id.toString())
          }
          .width('100%')
          .layoutWeight(1)
          .padding({ left: 16, right: 16 })

          // Â∫ïÈÉ®ÊÄª‰ª∑Ê†è
          this.BottomTotalBar()
        }
        .height('100%')
      }
    }
    .width(LAYOUT_WIDTH_OR_HEIGHT)
    .height(LAYOUT_WIDTH_OR_HEIGHT)
    .backgroundColor('#F5F5F5')
  }

  @Builder
  CartItemCard(item: CartItem) {
    Row({ space: 12 }) {
      // ÈÄâÊã©Ê°Ü
      Checkbox({ name: 'item' + item.id, group: 'cart' })
        .select(item.selected)
        .onChange((checked: boolean) => {
          CartStore.toggleItemSelection(item.id);
        })

      // ÂïÜÂìÅÂõæÁâáÔºà‰ΩøÁî®Member BÊèê‰æõÁöÑÂõæÁâáÔºâ
      Image(item.image)
        .width(80)
        .height(80)
        .borderRadius(8)

      // ÂïÜÂìÅ‰ø°ÊÅØ
      Column({ space: 4 }) {
        Text(item.name)
          .fontSize(16)
          .maxLines(2)
          .width('100%')

        Text('¬•' + item.price.toFixed(2))
          .fontSize(18)
          .fontColor('#FF5000')
          .fontWeight(FontWeight.Bold)
          .margin({ top: 4 })

        // Êï∞ÈáèÊéßÂà∂
        Row({ space: 12 }) {
          Button('-')
            .width(30)
            .height(30)
            .fontSize(16)
            .onClick(() => {
              CartStore.updateItemCount(item.id, item.count - 1);
            })

          Text(item.count.toString())
            .fontSize(16)
            .width(40)
            .textAlign(TextAlign.Center)

          Button('+')
            .width(30)
            .height(30)
            .fontSize(16)
            .onClick(() => {
              CartStore.updateItemCount(item.id, item.count + 1);
            })
        }
        .margin({ top: 8 })
      }
      .layoutWeight(1)

      // Âà†Èô§ÊåâÈíÆÔºàÊñáÂ≠óÊåâÈíÆÔºå‰∏çÈúÄË¶ÅÂõæÁâáÔºâ
      Button('Âà†Èô§')
        .fontSize(12)
        .fontColor('#FF0000')
        .backgroundColor('#FFE5E5')
        .padding(8)
        .onClick(() => {
          CartStore.removeFromCart(item.id);
        })
    }
    .padding(12)
    .backgroundColor('#FFFFFF')
    .borderRadius(12)
    .width('100%')
  }

  @Builder
  BottomTotalBar() {
    Row({ space: 16 }) {
      Column({ space: 4 }) {
        Text('ÂêàËÆ°:')
          .fontSize(14)
          .fontColor('#666666')

        Text('¬•' + this.getTotalPrice().toFixed(2))
          .fontSize(20)
          .fontColor('#FF5000')
          .fontWeight(FontWeight.Bold)
      }
      .layoutWeight(1)

      Text('Â∑≤ÈÄâ ' + this.getSelectedCount() + ' ‰ª∂')
        .fontSize(14)
        .fontColor('#333333')
    }
    .padding(16)
    .width('100%')
    .backgroundColor('#FFFFFF')
    .border({ width: { top: 1 }, color: '#EEEEEE' })
  }
}
